#include<stdio.h>
#include<math.h>
int main ()
{
int a[100],i=0,j,num,rem;
printf("Enter a number in decimal : \n");
scanf("%d",&num);
while(num!=0)
      {
 	    rem=num%2;
 	    num=num/2;
 	    a[i]=rem;
 	    i++;
      }
printf("The binary of the given decimal number is : \n");
  for(j=i-1;j>=0;j--)
      printf("%d",a[j]);
return 0;
}
